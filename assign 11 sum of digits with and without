 def sum_digits(n):
    if n == 0:
        return 0
    return n % 10 + sum_digits(n // 10)

num = int(input("Enter a number: "))
print("Sum of digits:", sum_digits(num))

num = int(input("Enter a number: "))
total = 0

while num > 0:
    total += num % 10
    num = num // 10

print("Sum of digits:", total)

